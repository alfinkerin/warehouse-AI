// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id String @id @default(cuid())
  email String @unique
  username String @unique
  password String
  createdAt DateTime @default(now())
  updateAt DateTime @updatedAt
}

model Store {
  id String @id @default(cuid())
  name String
  img String
  address String
  email String @unique
  phone String
  createdAt DateTime @default(now())
  updateAt DateTime @updatedAt
}

model Product {
  id String @id @default(cuid())
  name String
  stock Int
  price Int
  store String
  createdAt DateTime @default(now())
  updateAt DateTime @updatedAt
}

model Gallery {
  id String @id @default(cuid())
  img String
  name String
  createdAt DateTime @default(now())
  updateAt DateTime @updatedAt
}
